{
  "composer": {
    "language": "haskell",
    "multiline": true,
    "contextLength": 8000
  },
  "suggestions": {
    "enabled": true,
    "languages": ["haskell"],
    "contextFiles": [
      ".cursor/docs/**",
      ".cursor/context/**"
    ]
  },
  "chat": {
    "systemMessage": "You are a Haskell expert helping with a terminal-based configuration management tool. Follow clean architecture principles and maintain type safety. Reference the project documentation in .cursor/docs/ for context.",
    "includeProjectContext": true,
    "contextFiles": [
      ".cursor/rules",
      ".cursor/docs/project-overview.md",
      ".cursor/context/haskell-patterns.md"
    ]
  },
  "codeActions": {
    "autoImport": true,
    "organizeImports": true,
    "preferExplicitImports": true
  },
  "formatting": {
    "enabled": true,
    "tool": "ormolu",
    "lineLength": 80
  },
  "linting": {
    "enabled": true,
    "tool": "hlint",
    "strictMode": false
  }
} 